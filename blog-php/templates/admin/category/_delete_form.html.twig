<form method="post" style="display: inline-block" action="{{ path('category_delete', {'id': category.id}) }}" onsubmit="return confirm('Etes-vous sûr de vouloir supprimer cette catégorie ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button class="btn btn-danger mt-2"><i class="bi bi-trash-fill"></i> | Supprimer</button>
</form>

<div style="width: 20%;" class="row justify-content-start mt-4 float-left">
    <div class="col-md-12">
        <div class="container bg-light rounded" style="border: 1px solid rgba(0, 0, 0, 0.125); text-align:center">
            <hr>
            <h6 class="mt-3">Derniers commentaires approuvés</h6>
            <hr>
            <ul class="list-group list-group-flush text-break">
                {% for comment in comments %}
                    <li class="list-group-item" style="text-align: left"><div><div class="float-left"><b>{{ comment.username }}: </b>{{ comment.content|nl2br }}</div></div></li>
                {% else %}
                    <li class="list-group-item" style="text-align: center"><i>Aucun commentaire n'a été approuvé.</i></li>
                {% endfor %}
            </ul>
            
            
            <hr>
            <h6 class="mt-3">Catégories utilisées</h6>
            <hr>

            

            <ul>
            {% for cat in categories %}
                <li style="text-align: left"> <b>{{ cat[0] }}</b> - {{ cat['posts'] }} post(s) </li>
            {% else %}
                <li style="text-align: left"><i>Aucune catégorie n'a été utilisée</i></li>
            {% endfor %}
            </ul>
        </div>
    </div>
</div>